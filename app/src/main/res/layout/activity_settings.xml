<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/register">

    <include
        android:id="@+id/settings_app_bar"
        layout="@layout/app_bar_layout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/settings_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_photo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/profile"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                />

            <EditText
                android:id="@+id/settings_user_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_profile_photo"
                android:background="@drawable/inputs"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:inputType="textMultiLine"
                android:hint="Status"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="25dp"
                />


            <EditText
                android:id="@+id/settings_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_status"
                android:background="@drawable/inputs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:hint="User Name"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/settings_user_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_name"
                android:background="@drawable/inputs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:hint="User Full Name"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/settings_user_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_full_name"
                android:background="@drawable/inputs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:hint="Date Of Birth"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/settings_user_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_birth_date"
                android:background="@drawable/inputs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:hint="Relationship Status"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/settings_user_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_relationship_status"
                android:background="@drawable/inputs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:hint="Country"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/settings_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_country"
                android:background="@drawable/inputs"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:hint="Gender"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/settings_update_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:layout_below="@id/settings_user_gender"
                android:layout_centerHorizontal="true"
                android:text="Update"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>